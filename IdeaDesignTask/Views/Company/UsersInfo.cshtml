@model Company

<form method="post">


        <div class="border p-3 text-center">
            <h2 class="text-info pl-1">@Model.name</h2>
            <div class="form-group row">
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">სახელი</th>
                        <th scope="col">გვარი</th>
                        <th scope="col">ქალაქი</th>
                        <th scope="col">ტელ.ნომერი</th>
                        <th scope="col">მომხმარლების შესახებ</th>
                        <th scope="col">მომხმარლების წაშლა</th>
                    </tr>
                </thead>
                @if (Model.Users.Count == 0)
                {
                    <tbody>
                        <tr>
                            <th class="text-danger">თანამშრომელი ვერ მოიძებნა</th>
                        </tr>
                    </tbody>
                }
                else
                {

                    @foreach (var users in Model.Users)
                    {
                        <tbody>
                            <tr>
                                <th scope="row">@users.name</th>
                                <th scope="row">@users.surname</th>
                                <th scope="row">@users.city</th>
                                <th scope="row">@users.phonenumber</th>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Users" asp-route-id="@users.id" asp-action="AllInfo" class="btn btn-warning"><i class="fas fa-info-circle"></i> ნახვა</a>
                                    </div>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Users" asp-route-userid="@users.id" asp-route-companyid="@Model.id" asp-action="DeleteUser" class="btn btn-danger"><i class="fas fa-info-circle"></i> წაშლა</a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
            <br /> <br /><br />
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success w-100 "><i class="fas fa-backspace"></i> &nbsp; დაბრუნება</a>
            </div>
        </div>
    
</form>

